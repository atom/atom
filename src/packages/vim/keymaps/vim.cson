'body':
  'escape': 'vim:command-mode'

'.editor.command-mode':
  ':': 'vim:ex-mode'
  'i': 'vim:insert-mode'
  'h': 'core:move-left'
  'j': 'core:move-down'
  'k': 'core:move-up'
  'l': 'core:move-right'
  '0': 'editor:move-to-beginning-of-line'
  '$': 'editor:move-to-end-of-line'
  'u': 'core:undo'
  'ctrl-r': 'core:redo'

'.vim .editor':
  'enter': 'vim:execute'
